<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="adu.ae.tictactow"
    tools:ignore="GoogleAppIndexingWarning">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCTION" />



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">



        <activity android:name=".activities.LocalMultiplayerActivity"
            android:theme="@style/AppTheme"
            android:parentActivityName=".activities.TitleActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".activities.BluetoothActivity"
            android:theme="@style/AppTheme"
            android:parentActivityName=".activities.TitleActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".activities.SinglePlayerActivity"
            android:theme="@style/AppTheme"
            android:parentActivityName=".activities.TitleActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".activities.TitleActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.LocalCoopActivity"
            android:theme="@style/AppTheme"
            android:parentActivityName=".activities.TitleActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>